# ETHhook-C Environment Configuration

# Ethereum RPC endpoints (get free API keys from Alchemy or Infura)
ETHEREUM_WS_URL=wss://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
ARBITRUM_WS_URL=wss://arb-sepolia.g.alchemy.com/v2/YOUR_API_KEY
OPTIMISM_WS_URL=wss://opt-sepolia.g.alchemy.com/v2/YOUR_API_KEY
BASE_WS_URL=wss://base-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Database (PostgreSQL)
DATABASE_URL=postgresql://ethhook:password@localhost:5432/ethhook

# Redis
REDIS_URL=redis://localhost:6379

# Admin API
JWT_SECRET=change-this-to-a-random-256-bit-secret-in-production
API_PORT=8080

# Logging
LOG_LEVEL=info    # debug, info, warn, error
LOG_FORMAT=text   # text or json

# Metrics
METRICS_PORT=9090
